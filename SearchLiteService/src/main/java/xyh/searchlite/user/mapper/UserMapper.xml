<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyh.searchlite.user.mapper.UserMapper">
    <insert id="insertSearchRecords">
        insert into search_records(user_id, problem_id)
        VALUES (#{searchRecords.userId}, #{searchRecords.problemId})
    </insert>
    <insert id="insertLoginRecords">
        insert into login_records (user_id)
        values (#{userId})
    </insert>
    <insert id="insertUser" parameterType="xyh.searchlite.user.entity.User">
        insert into `user` (id, name)
        VALUES (#{user.id}, #{user.name})
    </insert>

    <select id="getPush" resultType="xyh.searchlite.user.entity.Push">
        select *
        from push
    </select>
    <select id="getSearchRecords" resultType="xyh.searchlite.user.entity.SearchRecords">
        select *
        from search_records
        where user_id = #{userId}
    </select>
    <select id="getPPT" resultType="xyh.searchlite.user.entity.PPT">
        select *
        from ppt
    </select>
    <select id="getAllUser" resultType="xyh.searchlite.user.entity.User">
        select *
        from user
    </select>
</mapper>